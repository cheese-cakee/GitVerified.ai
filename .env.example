# GitVerified Production Environment Configuration
# Copy this file to .env and update values for your environment

# Database Configuration
POSTGRES_DB=kestra
POSTGRES_USER=kestra
POSTGRES_PASSWORD=kestra123_production
POSTGRES_PORT=5432

# Redis Configuration
REDIS_PORT=6379

# Kestra Configuration
KESTRA_PORT=8080
KESTRA_USERNAME=admin
KESTRA_PASSWORD=your_secure_password_here

# Frontend Configuration
FRONTEND_PORT=3000
NEXT_PUBLIC_API_URL=https://your-domain.com/api
NEXT_PUBLIC_KESTRA_URL=https://your-domain.com/kestra
NODE_ENV=production

# Nginx Configuration
NGINX_PORT=80
NGINX_SSL_PORT=443

# API Keys and Secrets (Set these in your environment)
OPENAI_API_KEY=your_openai_api_key_here
GROQ_API_KEY=your_groq_api_key_here
GITHUB_TOKEN=your_github_token_here

# Logging Configuration
LOG_LEVEL=INFO

# Security Configuration
JWT_SECRET=your_jwt_secret_here_min_32_chars
SESSION_SECRET=your_session_secret_here

# Feature Flags
ENABLE_RATE_LIMITING=true
ENABLE_CORS=true
ENABLE_HELMET=true

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30