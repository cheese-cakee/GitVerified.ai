# Simple Agent Dockerfile (No heavy dependencies)
FROM python:3.9-slim

WORKDIR /app

# Copy requirements and install basic deps only
COPY requirements.hybrid.txt .
RUN pip install --no-cache-dir -r requirements.hybrid.txt

# Copy agents
COPY agents/ /app/agents/

# Create directories
RUN mkdir -p /data /models

# Environment
ENV PYTHONPATH=/app
ENV REDIS_URL=redis://redis:6379

# Test basic functionality
RUN python -c "from agents.integrity import scan_resume_integrity; print('Agent OK')" || echo "Agent ready"

# Default command
CMD ["python", "-c", "print('CandidateAI Agents Ready')"]